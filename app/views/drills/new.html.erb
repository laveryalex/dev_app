<% provide(:title, "New Drill") %>
<h1>GcBaseball Add Drill</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @drill, local: true) do |f| %>
      <%= f.label :performance %>
      <%= f.text_field :performance %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :sets %>
      <%= f.text_field :sets %>

      <%= f.label :reps %>
      <%= f.text_field :reps %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create Drill", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>